---
import Layout from "../layouts/Layout.astro";
import ProgressBar from "../components/ProgressBar.astro";

const skills = [
  {
    name: "html",
    value: "85%",
  },
  {
    name: "js",
    value: "90%",
  },
  {
    name: "css",
    value: "80%",
  },
  {
    name: "Vue 2/3 & nuxt",
    value: "70%",
  },
  {
    name: "React/nextjs/umi",
    value: "75%",
  },
  {
    name: "node.js",
    value: "65%",
  },
];
---

<Layout title="Tianchun Luo">
  <main>
    <div
      class="h-80 pt-44 px-8 bg-[url('/imgs/scene.jpg')] bg-cover bg-no-repeat bg-center text-4xl"
    >
      <p class="text-gray-200">Hi, I am Tianchun Luo</p>
      <p class="text-yellow-300 mt-4">Frontend Devloper</p>
    </div>
    <section class="about py-4 bg-indigo-100">
      <div
        class="w-2/3 min-h-[200px] gap-4 grid grid-cols-2 py-4 mx-auto px-12"
      >
        <!-- <div class="w-2/3 text-center">
          <img class="inline-block" src="/imgs/back.jpeg" alt="" />
        </div> -->
        <img src="/imgs/back.jpeg" alt="" />

        <div class="flex items-center">
          <div class="text-gray-800 text-2xl font-normal">
            <p class="text-3xl text-gray-800 mb-4">About Me</p>
            Hi my name is <strong>
              Tianchun Luo. <br />
              A Frontend Engineer basing in China, GuangZhou.<br />
            </strong>
            <span class="mt-2 block">
              Outside of work I enjoy playing basketball and listening music.
            </span>
          </div>
        </div>
      </div>
    </section>
    <div class="skill py-4 bg-gray-300">
      <h1 class="text-center">SKILLS</h1>
      <div class="grid grid-cols-2 gap-4 w-2/3 mx-auto">
        {
          skills.map((item) => (
            <div>
              <span class="text-base">{item.name}</span>

              <ProgressBar ratio={item.value} />
            </div>
          ))
        }
      </div>
    </div>
  </main>
</Layout>
