---
export interface Props {
  ratio: string;
}

const { ratio } = Astro.props;
---

<div class="w-full bg-gray-200 rounded-full">
  <div
    class="bg-blue-600 text-xs font-medium text-blue-100 text-center p-0.5 leading-none rounded-full"
    style={`width: ${ratio}`}
  >
    {ratio}
  </div>
</div>
